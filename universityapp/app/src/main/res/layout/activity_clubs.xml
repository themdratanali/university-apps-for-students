<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClubsActivity"
    android:background="@color/White">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White">

        <LinearLayout
            android:id="@+id/backHome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#C24C2E"
            android:gravity="start|center"
            android:textAlignment="center"
            android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:src="@drawable/back_icon2" />
            <TextView
                android:id="@+id/dep2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="Clubs"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:layout_marginTop="1dp"
                android:layout_marginStart="9dp"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/cse"
            android:layout_below="@+id/backHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemibold"
            android:text="Clubs of CSE"
            android:textAlignment="textStart"
            android:textColor="@color/Black"
            android:layout_marginTop="5dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="10dp"
            android:textSize="13dp"
            android:textStyle="bold"
            android:drawableRight="@drawable/vu_drop_down_icon"/>

        <GridLayout
            android:id="@+id/cseClubs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/backHome"
            android:layout_marginTop="20dp"
            android:columnCount="4"
            android:rowCount="4">

            <androidx.cardview.widget.CardView
                android:id="@+id/robotic"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                app:cardBackgroundColor="@color/White"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:src="@drawable/vu_robotic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Robotic Society"
                        android:textAlignment="center"
                        android:textColor="@color/Black"
                        android:textSize="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/code"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                app:cardBackgroundColor="@color/White"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:src="@drawable/vu_code" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Programmers World"
                        android:textAlignment="center"
                        android:textColor="@color/Black"
                        android:textSize="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/web"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                app:cardBackgroundColor="@color/White"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="3dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:src="@drawable/vu_web" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Web Development"
                        android:textAlignment="center"
                        android:textColor="@color/Black"
                        android:textSize="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <TextView
            android:id="@+id/eee"
            android:layout_below="@+id/cseClubs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemibold"
            android:text="Clubs of EEE"
            android:textAlignment="textStart"
            android:textColor="@color/Black"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="10dp"
            android:textSize="13dp"
            android:textStyle="bold"
            android:drawableRight="@drawable/vu_drop_down_icon"/>
        <GridLayout
            android:id="@+id/eeeClub"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/eee"
            android:columnCount="4"
            android:rowCount="4">

            <androidx.cardview.widget.CardView
                android:id="@+id/eClub"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                app:cardBackgroundColor="@color/White"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:src="@drawable/vu_eclub" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="E-Club"
                        android:textAlignment="center"
                        android:textColor="@color/Black"
                        android:textSize="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <TextView
            android:id="@+id/bba"
            android:layout_below="@+id/eeeClub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemibold"
            android:text="Clubs of Business Administration"
            android:textAlignment="textStart"
            android:textColor="@color/Black"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="10dp"
            android:textSize="13dp"
            android:textStyle="bold"
            android:drawableRight="@drawable/vu_drop_down_icon"/>
        <GridLayout
            android:id="@+id/bbaClub"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/bba"
            android:columnCount="4"
            android:rowCount="4">

            <androidx.cardview.widget.CardView
                android:id="@+id/businessClubs"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                app:cardBackgroundColor="@color/White"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:src="@drawable/vu_business" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Business Club"
                        android:textAlignment="center"
                        android:textColor="@color/Black"
                        android:textSize="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <TextView
            android:id="@+id/english"
            android:layout_below="@+id/bbaClub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemibold"
            android:text="Clubs of English"
            android:textAlignment="textStart"
            android:textColor="@color/Black"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="10dp"
            android:textSize="13dp"
            android:textStyle="bold"
            android:drawableRight="@drawable/vu_drop_down_icon"/>
        <GridLayout
            android:id="@+id/englishClub"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/english"
            android:columnCount="4"
            android:rowCount="4">

            <androidx.cardview.widget.CardView
                android:id="@+id/languageClub"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                app:cardBackgroundColor="@color/White"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:src="@drawable/vu_english" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="English Language"
                        android:textAlignment="center"
                        android:textColor="@color/Black"
                        android:textSize="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <TextView
            android:id="@+id/jcms"
            android:layout_below="@+id/englishClub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemibold"
            android:text="Clubs of JCMS"
            android:textAlignment="textStart"
            android:textColor="@color/Black"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="10dp"
            android:textSize="13dp"
            android:textStyle="bold"
            android:drawableRight="@drawable/vu_drop_down_icon"/>

        <GridLayout
            android:id="@+id/jcmsClub"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/jcms"
            android:columnCount="4"
            android:rowCount="4">

            <androidx.cardview.widget.CardView
                android:id="@+id/journalismClubs"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                app:cardBackgroundColor="@color/White"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:src="@drawable/vu_jcms" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Journalism"
                        android:textAlignment="center"
                        android:textColor="@color/Black"
                        android:textSize="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <TextView
            android:id="@+id/law"
            android:layout_below="@+id/jcmsClub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemibold"
            android:text="Clubs of Law"
            android:textAlignment="textStart"
            android:textColor="@color/Black"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="10dp"
            android:textSize="13dp"
            android:textStyle="bold"
            android:drawableRight="@drawable/vu_drop_down_icon"/>
        <GridLayout
            android:id="@+id/lawClub"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/law"
            android:columnCount="4"
            android:rowCount="4">

            <androidx.cardview.widget.CardView
                android:id="@+id/mootClubs"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                app:cardBackgroundColor="@color/White"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:src="@drawable/vu_law" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Moot Court Club"
                        android:textAlignment="center"
                        android:textColor="@color/Black"
                        android:textSize="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <TextView
            android:id="@+id/pharmacy"
            android:layout_below="@+id/lawClub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemibold"
            android:text="CClubs of Pharmacy"
            android:textAlignment="textStart"
            android:textColor="@color/Black"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="10dp"
            android:textSize="13dp"
            android:textStyle="bold"
            android:drawableRight="@drawable/vu_drop_down_icon"/>
        <GridLayout
            android:id="@+id/pharmacyClub"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/pharmacy"
            android:columnCount="4"
            android:rowCount="4">

            <androidx.cardview.widget.CardView
                android:id="@+id/pharmacyClubs"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                app:cardBackgroundColor="@color/White"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:src="@drawable/vu_pharma" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Pharma Bee Club"
                        android:textAlignment="center"
                        android:textColor="@color/Black"
                        android:textSize="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
    </RelativeLayout>

</ScrollView>