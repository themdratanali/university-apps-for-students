<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransportationActivity"
    android:background="@color/White">

    <LinearLayout
        android:id="@+id/backHome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#C24C2E"
        android:gravity="start|center"
        android:textAlignment="center"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:src="@drawable/back_icon2" />
        <TextView
            android:id="@+id/dep2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="Transportation"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:layout_marginTop="1dp"
            android:layout_marginStart="9dp"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backHome"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_weight="2"
        android:padding="10sp"
        android:text="বাসের সময়সূচী"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/table1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:padding="5dp">

        <TableRow
            android:layout_height="30dp"
            android:background="#C24C2E">
            <TextView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:layout_weight="4"
                android:padding="3sp"
                android:text="রুট"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </TableRow>

        <!-- Table Data -->
        <TableRow
            android:layout_height="wrap_content"
            android:background="#36C24C2E">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:padding="5sp"
                android:text="রুট-১"
                android:textColor="@color/Black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:padding="5sp"
                android:text="আলুপট্টি - হাদির মোড় - তালাইমারী - বরেন্দ্র বিশ্ববিদ্যালয়"
                android:textColor="@color/Black"
                android:textSize="13sp"/>

        </TableRow>


        <TableRow
            android:layout_height="wrap_content"
            android:background="#F8F8F8">

            <TextView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:padding="5sp"
                android:text="রুট-২"
                android:textColor="@color/Black"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:padding="5sp"
                android:text="সিটি বাইপাস - বৰ্ণালী - রেলগেট - আমচত্বর - বরেন্দ্র বিশ্ববিদ্যালয়"
                android:textColor="@color/Black"
                android:textSize="13sp"/>

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:background="#4B207246"/>

        <TableRow
            android:layout_height="wrap_content"
            android:background="@color/White" />

        <TableRow
            android:layout_height="wrap_content"
            android:background="#AFCFCD" />

        <TableRow
            android:layout_height="wrap_content"
            android:background="@color/White" />
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table1"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:padding="5dp">

        <TableRow
            android:layout_height="20dp"
            android:background="#C24C2E">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:padding="5sp"
                android:text="রুট"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="5"
                android:padding="5sp"
                android:text="বরেন্দ্র বিশ্ববিদ্যালয় থেকে বাস ছাড়ার সময়"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="5"
                android:padding="5sp"
                android:text="আলুপট্টি ও সিটি বাইপাস থেকে বাস ছাড়ার সময়"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold" />

        </TableRow>
        <!-- Table Data -->
        <TableRow
            android:layout_height="wrap_content"
            android:background="#36C24C2E">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:padding="5sp"
                android:text="ট্রিপ-১"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:padding="5sp"
                android:text=""
                android:textColor="@color/Black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:padding="5sp"
                android:textAlignment="center"
                android:text="সকাল ০৮ : ২০ মিনিট"
                android:textColor="@color/Black"
                android:textSize="13sp" />

        </TableRow>


        <TableRow
            android:layout_height="wrap_content"
            android:background="#F8F8F8">

            <TextView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:padding="5sp"
                android:textAlignment="center"
                android:text="ট্রিপ-২"
                android:textColor="@color/Black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:padding="5sp"
                android:text="সকাল ০৯ : ১৫ মিনিট"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="13sp" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:padding="5sp"
                android:text="সসকাল ১০ : ০০ মিনিট"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="13sp" />

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:background="#36C24C2E">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:padding="5sp"
                android:text="ট্রিপ-৩"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:textAlignment="center"
                android:padding="5sp"
                android:text="দুপুর ০১ : ০০ মিনিট"
                android:textColor="@color/Black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:padding="5sp"
                android:text="দুপুর ০১ : ৫০ মিনিট"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="13sp" />
        </TableRow>


        <TableRow
            android:layout_height="wrap_content"
            android:background="#F8F8F8">

            <TextView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:textAlignment="center"
                android:padding="5sp"
                android:text="ট্রিপ-৪"
                android:textColor="@color/Black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:padding="5sp"
                android:text="বিকাল ০৩:০০ মিনিট"
                android:textColor="@color/Black"
                android:textSize="13sp" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:textAlignment="center"
                android:padding="5sp"
                android:text="বিকাল ০৩ : ৫০ মিনিট"
                android:textColor="@color/Black"
                android:textSize="13sp" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:background="#36C24C2E">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:padding="5sp"
                android:text="ট্রিপ-৫"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:textAlignment="center"
                android:padding="5sp"
                android:text="সন্ধ্যা ০৬:১০ মিনিট"
                android:textColor="@color/Black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:textAlignment="center"
                android:padding="5sp"
                android:text=""
                android:textColor="@color/Black"
                android:textSize="13sp" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:background="#4B207246"/>

        <TableRow
            android:layout_height="wrap_content"
            android:background="@color/White" />

        <TableRow
            android:layout_height="wrap_content"
            android:background="#AFCFCD" />

        <TableRow
            android:layout_height="wrap_content"
            android:background="@color/White" />
    </TableLayout>
</RelativeLayout>